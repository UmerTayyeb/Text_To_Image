                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:layout_marginTop="5dp"
                            app:cardCornerRadius="25dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
